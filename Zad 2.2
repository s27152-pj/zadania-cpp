#include <iostream>

using namespace std;

int main()
{

    int a = 0;
    int b = 0;
    int c = 0;

    cout << "Podaj liczbe a: ";
    cin >> a;
    cout << "Podaj liczbe b: ";
    cin >> b;
    cout << endl;
    
    cout << "Pobrano liczby a == "<< a << " oraz b == " << b <<endl;
    cout << endl;
    
    cout << "Wiersz o dlugosci a:" << endl;
    for (int z=0;z<a;z++)
    {
        cout << "*";
    }
    
    cout << endl;
    cout << endl;
    
    cout << "Kolumna o dlugosci b:" << endl;
    for (int z=0;z<b;z++)
    {
        cout << "*" << endl;
    }
    
    cout << endl;
    
    cout << "Prostokat gwiazdek o wymiarach 'a' na 'b':" << endl;
    for (int i=0;i<b;i++)
    {
        for (int i=0;i<a;i++)
        {
            cout << "*";
        }
        cout << endl;
    }
    
    cout << endl;
    
    cout << "Obwod prostokatu o wymiarach 'a' na 'b':" << endl;
    for (int i=0;i<b;i++)
    {
        for (int j=0;j<a;j++)
        {
            if (i==0||i==b-1)
            {
                cout << "*";
            }
            else
                if (j==0||j==a-1)
                {
                    cout << "*";
                }
                else
                    cout << " ";
        }
        cout << endl;
    }
    
    cout << endl;
    
    c = a;
    a = 0;
    
    cout << "Trojkat prostokatny rownoramienny z katem prostym w lewym dolnym rogu: " << endl;
    for (int i=0;i<=c;i++)
    {
        a = a+1;
        for (int i=0;i<a-1;i++)
        {
            cout << "*";
        }
        cout << endl;
    }
    cout << endl;
}
