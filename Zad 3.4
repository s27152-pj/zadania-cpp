#include <iostream>
using namespace std;

int main()
{
    int n = 0;
    cout << "Podaj liczbę wierszy w trójkącie Pascala: ";
    cin >> n;
    cout << endl << endl;



   for (int i = 1; i <= n; i++){
        int x=1;
        for (int j = n - i; j > 0; j--){
            cout << " ";
        }
        for (int k = 1; k <= i; k++){
            cout << x << " ";
            x = x * (i-k)/k;
        }
        cout << endl;
    }
}
